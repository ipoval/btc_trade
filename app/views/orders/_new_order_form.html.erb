<div class="col-lg-4">
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="inputAutoOrderP" class="col-sm-2 control-label">Price</label>
      <div class="col-sm-10 input-group-sm">
        <input type="number" class="form-control" id="inputAutoOrderP" placeholder="stop price" autofocus="autofocus">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAutoOrderV" class="col-sm-2 control-label">Volume</label>
      <div class="col-sm-10 input-group-sm">
        <input type="number" class="form-control" id="inputAutoOrderV" placeholder="volume to trade">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <label class="radio-inline">
          <input type="radio" name="auto_order_type" id="inlineRadio1" value="auto_buy" checked="checked"> buy
        </label>
        <label class="radio-inline">
          <input type="radio" name="auto_order_type" id="inlineRadio2" value="auto_sell"> sell
        </label>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button id="btnCreateOrder" type="submit" class="btn btn-default btn-sm">Create new</button>
        <button id="btnDeleteOrders" type="submit" class="btn btn-default btn-sm">Clear all</button>
      </div>
    </div>
  </form>
</div>