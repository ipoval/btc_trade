<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputBitstampAutoOrderP" class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10 input-group-sm">
      <input type="number" class="form-control" id="inputBitstampAutoOrderP" placeholder="stop price" autofocus="autofocus">
    </div>
  </div>
  <div class="form-group">
    <label for="inputBitstampAutoOrderV" class="col-sm-2 control-label">Volume</label>
    <div class="col-sm-10 input-group-sm">
      <input type="text" class="form-control" id="inputBitstampAutoOrderV" placeholder="volume to trade">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <label class="radio-inline">
        <input type="radio" name="bitstamp_auto_order_type" id="inlineRadio1" value="auto_buy" checked="checked"> buy
      </label>
      <label class="radio-inline">
        <input type="radio" name="bitstamp_auto_order_type" id="inlineRadio2" value="auto_sell"> sell
      </label>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button id="btnCreateBitstampOrder" type="submit" class="btn btn-default btn-sm">Create new</button>
      <button id="btnDeleteBitstampOrders" type="submit" class="btn btn-default btn-sm">Clear all</button>
    </div>
  </div>
</form>
