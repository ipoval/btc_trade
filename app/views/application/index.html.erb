<section class="row">
  <div class="col-lg-4">
    <div class="table-responsive">
      <table id="orderbook" class="table table-condensed table-hover">
        <caption>
          lakebtc.com
          <span id="orderbook-current-price" class="lead pull-right" style="margin:0;"></span>
        </caption>
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Price</th>
            <th>Amount</th>
            <th style="width:80px;">Sum</th>
            <th style="width:80px;"></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>

  <div class="col-lg-4 col-lg-offset-1">
    <div class="table-responsive">
      <table id="orderbookBitstamp" class="table table-condensed table-hover">
        <caption>
          bitstamp.net
          <span id="orderbook-bitstamp-current-price" class="lead pull-right" style="margin:0;"></span>
        </caption>
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Price</th>
            <th>Amount</th>
            <th style="width:80px;">Sum</th>
            <th style="width:80px;"></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>

  <div class="col-lg-4 col-lg-offset-1">
