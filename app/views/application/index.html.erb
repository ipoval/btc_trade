<kbd id="orderbook-current-price" class="lead navbar-fixed-top"></kbd>
<br />
<br />
<section class="row">
  <div class="col-lg-4">
    <div class="table-responsive">
      <table id="orderbook" class="table table-condensed table-hover">
        <thead>
          <tr>
            <th>&nbsp;</th>
            <th>Price</th>
            <th>Amount</th>
            <th style="width:80px;">Sum</th>
            <th style="width:80px;"></th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</section>

<section id="sectionOneClickAmount" class="row">
  <div class="col-lg-4">
    <div class="form-group">
      <div class="input-group input-group-sm">
        <span class="input-group-addon">Order Amount (BTC)</span>
        <input id="orderAmount" name="orderAmount" type="text" class="form-control" placeholder="0.01" value="0.01" data-value="0.01">
      </div>
    </div>
    <div id="multipliers" class="form-group">
      <div aria-label="First group" role="group" class="btn-group btn-group-sm">
        <button class="btn btn-default" type="button" data-ind="1">&times;1</button>
        <button class="btn btn-default" type="button" data-ind="2">&times;2</button>
        <button class="btn btn-default" type="button" data-ind="5">&times;5</button>
        <button class="btn btn-default" type="button" data-ind="10">&times;10</button>
        <button class="btn btn-default" type="button" data-ind="20">&times;20</button>
      </div>
      &nbsp;
      <%= link_to 'Auto order (show / hide)', new_order_path, remote: true %>
    </div>
  </div>
</section>

<section class="row" id="sectionAutoOrders">
</section>

<section class="row">
  <div id="sectionAccountBalance" class="col-lg-4"></div>
</section>

<section class="row">
  <div id="sectionOrdersList" class="col-lg-4"></div>
</section>
